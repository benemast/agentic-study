# Main setup
ENVIRONMENT=dev
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=True

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
AUTO_SYNC_INTERVAL_MINUTES=5


# LLM Configuration
LLLM_MODEL=gpt-5-mini
# Streaming Configuration
USE_STREAM=true
# Only send last 10 messages for context
MAX_CONTEXT_MESSAGES=10


# OpenAI Configuration
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
# Institute key for legacy streams or current batch:
OPENAI_API_KEY_INSTITUTE=institute_openai_api_key_here

# Personal key for new model streams:
OPENAI_API_KEY_PERSONAL=personal_openai_api_key_here


# Only send last 10 messages for context
DEFAULT_MAX_TOKENS=1024

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# Cache responses for 1 hour
CACHE_TTL=3600  # Cache responses for 1 hour

# Sentry Error Tracking
SENTRY_DSN=https://code.ingest.XX.sentry.io/id
SENTRY_ENVIRONMENT=development

# LangSmith Configuration (for LangGraph debugging & tracing)
LANGSMITH_ENABLED=true
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://eu.api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=your_langsmith_project_name
LANGSMITH_ORG_ID=your_langsmith_org_id
LANGSMITH_ORG_NAME=your_langsmith_org_name
