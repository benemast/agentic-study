# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000/api

# Development Configuration
VITE_DEBUG=true
VITE_SESSION_TIMEOUT=3600000

# LLM Configurtaion
LLM_Model = gpt-3.5-turbo
TEMPERATURE = 0.7
MAX_CONTEXT_MESSAGES = 10  # Only send last 10 messages for context
DEFAULT_MAX_TOKENS = 500  # Reduced from 1000 for 2x faster responses
CACHE_TTL = 3600  # Cache responses for 1 hour

# Clarity
VITE_ENABLE_CLARITY=true
VITE_CLARITY_PROJECT_ID=your_clarity_id_here

# Sentry
VITE_SENTRY_DSN=https://code.ingest.XX.sentry.io/id
VITE_SENTRY_ENVIRONMENT=production